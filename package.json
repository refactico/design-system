{
  "name": "@refactico/design-system",
  "version": "0.1.0",
  "description": "Refactico Design System - Web Components built with Stencil",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/refactico-ds/refactico-ds.esm.js",
  "exports": {
    ".": {
      "import": "./dist/refactico-ds/refactico-ds.esm.js",
      "require": "./dist/refactico-ds/refactico-ds.cjs.js"
    },
    "./r-button": {
      "import": "./dist/components/r-button.js",
      "types": "./dist/components/r-button.d.ts"
    },
    "./r-button-group": {
      "import": "./dist/components/r-button-group.js",
      "types": "./dist/components/r-button-group.d.ts"
    },
    "./theme": {
      "import": "./dist/refactico-ds/theme/theme.css",
      "require": "./dist/refactico-ds/theme/theme.css"
    },
    "./theme.css": "./dist/refactico-ds/theme/theme.css",
    "./loader": {
      "import": "./loader/index.js",
      "require": "./loader/index.cjs",
      "types": "./loader/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stenciljs/component-starter.git"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@stencil/core": "^4.27.1",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/web-components-vite": "^10.1.11",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "lit": "^3.3.2",
    "playwright": "^1.57.0",
    "puppeteer": "^24.3.0",
    "storybook": "^10.1.11",
    "vitest": "^4.0.16"
  },
  "license": "MIT"
}
