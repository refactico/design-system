{
  "name": "@refactico/design-system",
  "version": "0.0.7",
  "description": "Refactico Design System - A comprehensive component library built with Stencil and Ionic for mobile and web applications",
  "keywords": [
    "design-system",
    "web-components",
    "stencil",
    "ionic",
    "refactico",
    "ui-components",
    "mobile",
    "react",
    "angular",
    "vue",
    "typescript"
  ],
  "author": "Refactico",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/refactico/refactico.esm.js",
  "exports": {
    ".": {
      "import": "./dist/refactico/refactico.esm.js",
      "require": "./dist/refactico/refactico.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./r-button": {
      "import": "./dist/components/r-button.js",
      "types": "./dist/components/r-button.d.ts"
    },
    "./r-input": {
      "import": "./dist/components/r-input.js",
      "types": "./dist/components/r-input.d.ts"
    },
    "./loader": {
      "types": "./loader/index.d.ts",
      "import": "./loader/index.js",
      "require": "./loader/index.cjs"
    },
    "./theme.css": {
      "default": "./dist/theme.css"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/refactico/design-system.git"
  },
  "bugs": {
    "url": "https://github.com/refactico/design-system/issues"
  },
  "homepage": "https://github.com/refactico/design-system#readme",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "generate:ionic-mapping": "ts-node --project tsconfig.scripts.json scripts/generate-ionic-mapping.ts",
    "bundle:theme": "ts-node --project tsconfig.scripts.json scripts/bundle-theme.css.ts",
    "prebuild": "npm run generate:ionic-mapping",
    "build": "stencil build",
    "postbuild": "npm run bundle:theme",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "storybook": "storybook dev -p 6006 --no-open"
  },
  "dependencies": {
    "@ionic/core": "^8.7.9"
  },
  "devDependencies": {
    "@stencil/core": "^4.38.3",
    "@stencil/storybook-plugin": "^0.5.6",
    "@storybook/addon-docs": "9.1.16",
    "@storybook/addon-links": "9.1.16",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.5",
    "@types/react": "^18.3.26",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "puppeteer": "^24.3.0",
    "storybook": "9.1.16",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2"
  }
}
